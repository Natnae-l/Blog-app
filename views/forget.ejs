<body>

    <div class="container" id="container" style="width: 60%;">
        <div class="form-container sign-in" style="width: 90%; display:flex; align-items:center; justify-content: center;">
            <form action="/users/login" method="POST" style="width: 80%;">
                <h5>Enter your email address:</h5>
                <%- include ./partials/messages %>
                <input type="email" placeholder="Email" name="email" required>
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</body>

